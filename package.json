{
  "name": "luminor",
  "version": "0.1.0",
  "description": "Enterprise Hono framework with DDD, Dependency Injection, and Drizzle ORM",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "luminor": "./bin/luminor.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "hono",
    "ddd",
    "dependency-injection",
    "drizzle",
    "orm",
    "enterprise",
    "framework"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.0.0",
    "tsyringe": "^4.8.0",
    "drizzle-orm": "^0.29.0",
    "drizzle-kit": "^0.20.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.1.14"
  },
  "peerDependencies": {
    "mysql2": "^3.6.0",
    "pg": "^8.11.0",
    "better-sqlite3": "^9.2.0"
  },
  "peerDependenciesMeta": {
    "mysql2": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/better-sqlite3": "^7.6.8",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.4"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}

